<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
   <Appenders>
      <!-- Appender para la consola -->
      <Console name="Console" target="SYSTEM_OUT">
         <PatternLayout pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n%throwable" />
      </Console>

      <!-- Appender Rolling File general -->
      <RollingFile name="RollingFile" fileName="./logs/service.log"
                   filePattern="./logs/$${date:yyyy-MM}/service-%d{yyyy-MM-dd}-%i.log.zip">
         <PatternLayout pattern="%d %-5p [%t] %C{1.} %m%n" />
         <Policies>
            <SizeBasedTriggeringPolicy size="20 MB" />
            <TimeBasedTriggeringPolicy />
         </Policies>
      </RollingFile>

      <!-- Appenders especÃ­ficos para cada logger -->
      <RollingFile name="SpecificLoggerAppender" fileName="./logs/%logger{1}.log"
                   filePattern="./logs/$${date:yyyy-MM}/%logger{1}-%d{yyyy-MM-dd}-%i.log.zip">
         <PatternLayout pattern="%d %-5p [%t] %C{1.} %m%n" />
         <Policies>
            <SizeBasedTriggeringPolicy size="20 MB" />
            <TimeBasedTriggeringPolicy />
         </Policies>
      </RollingFile>
   </Appenders>

   <Loggers>
   
   <!-- Nivel TRACE para Spring Mail -->
	    <logger name="org.springframework.mail" level="TRACE" />
	    <logger name="org.springframework.mail.javamail" level="TRACE" />
